<!-- Учёт - Расходные документы-->
<div id="uchetSkladRasDoc" class="tab-content" ng-controller="uchetSkladRasDocCtrl" ng-show="global.selectedUchetSubMenuItem === 3">
  
  <div id="uchetRasDocDivLeft" class="left-block">
    
    <div class="rashod-stat-id">
      <span>Статья расхода</span>
      <select ng-options="item.ID as item.NAME for item in global.manual.M_RASHOD_STAT" ng-model="o_ras_doc.M_RASHOD_STAT_ID"></select>
    </div>

    <div class="uchet-ras-doc-row">
      <span>Номер</span>
      <input class="n-schet" type="text" ng-model="o_ras_doc.N_SCHET" />
    </div>

    <div class="uchet-ras-doc-row">
      <span>Дата</span>
      <input class="d-schet" type="date" ng-model="o_ras_doc.D_SCHET" />
    </div>

    <div class="uchet-ras-doc-row">
      <span>Поставщик</span>
      <textarea class="postav-name" rows="2" type="text" ng-model="o_ras_doc.POSTAV_NAME"></textarea>
    </div>

    <div class="uchet-ras-doc-row">
      <span>Реквизиты</span>
      <textarea class="rek" rows="5" type="text" ng-model="o_ras_doc.REK"></textarea>
    </div>

    <div class="uchet-ras-doc-row">
      <span>Цена</span>
      <input ng-change="reCalcSumma()" class="cost" type="number" ng-model="o_ras_doc.COST" />
    </div>

    <div class="uchet-ras-doc-row">
      <span>Количество</span>
      <input ng-change="reCalcSumma()" class="kolvo" type="number" ng-model="o_ras_doc.KOLVO" />
    </div>

    <div class="uchet-ras-doc-row">
      <span>Сумма</span>
      <input class="summa" type="number" ng-model="o_ras_doc.SUMMA_RASH" />
    </div>

  </div>

  <div id="uchetRasDocDivRight" class="right-block">

    <div class="uchet-ras-doc-header">
      <span class="header-text">Подотчетный период</span>
    </div>

    <div class="uchet-ras-doc-row">
      <span>Сотрудник</span>
      <select class="s-user-id"
              ng-options="item.ID as item.FIO for item in global.manual.S_USER |filter:{M_ORG_ID: global.userContext.M_ORG_ID}:true" 
              ng-model="o_ras_doc.S_USER_ID">
      </select>
    </div>

    <div class="uchet-ras-doc-row">
      <span>Мотив</span>
      <textarea class="motiv" rows="5" type="text" ng-model="o_ras_doc.MOTIV"></textarea>
    </div>

    <div class="uchet-ras-doc-row">
      <span>Сумма</span>
      <input ng-change="reCalcRashod()" class="summa_vid" type="number" ng-model="o_ras_doc.SUMMA_VID" />
    </div>

    <div class="uchet-ras-doc-row">
      <span>Возврат</span>
      <input ng-change="reCalcRashod()" class="vozvr" type="number" ng-model="o_ras_doc.VOZVR" />
    </div>

    <div class="uchet-ras-doc-row">
      <span>Расходовано</span>
      <input class="rashod" type="number" ng-model="o_ras_doc.RASHOD" />
    </div>

  </div>

  <div>
    <span>{{errorMessage}}</span>
  </div>

  <div class="button-block">
    <button type="button" ng-click="btnZapisClick()" class="btn-zapis">Запись</button>
    <button type="button" ng-click="btnSaveClick()" class="btn-save">Сохранить</button>
  </div>

  <div class="div-pagination">
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li ng-click="pageNext()">
          <a href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <li ng-repeat="item in pageNums" ng-class="{active: item === page}">
          <a href="#" ng-click="pageNumClick(item)">{{item}}</a>
        </li>
        <li ng-click="pagePrev()">
          <a href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
  
</div>
<!-- /учёт - расходные документы -->

