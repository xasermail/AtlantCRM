<!-- Учёт - Отчёты - Дебиторская задолженность -->
<div id="uchetReportsDebetZadol" class="tab-content" ng-controller="uchetReportsDebetZadolCtrl"
     ng-show="global.selectedUchetSubMenuItem === 4 && global.selectedUchetReportsSubMenuItem === 1">

  <div class="debet-zadol-div">
    
    <div>
      <span class="debet-zadol-first-row span-dt-from">Дата с</span>
      <input class="debet-zadol-first-row" type="date" ng-model="DT_FROM"/>

      <span class="debet-zadol-first-row">Дата по</span>
      <input class="debet-zadol-first-row" type="date" ng-model="DT_TO"/>

      <button class="debet-zadol-first-row" ng-click="refreshDebetZadol()">Применить</button>
      <button class="debet-zadol-first-row" ng-click="print()">Печать</button>
    </div>

    <div class="debet-zadol-div-table">
      <table>
        <tr>
          <td align="center">Наименование товара</td>
          <td align="center">Фамилия покупателя</td>
          <td align="center">Дата последней проплаты</td>
          <td align="center">Телефон</td>
          <td align="center">Дебет</td>
        </tr>

        <tr ng-repeat-start="item in data"
            ng-style="{ 'background-color' : ((($index + 1) % 2) > 0 ) ? 'white' : '' }">
          <td align="center" class="info1" ng-style="{'font-weight' : (item.BR === 1 ) ? 'bold' : '' }">{{item.NAME}}</td>
          <td align="center" class="info2">{{item.FIO}}</td>
          <td align="center" class="info3">{{item.D_OPL | date:'dd.MM.yyyy'}}</td>
          <td align="center" class="info4">{{item.PHONE}}</td>
          <td align="center" class="info5" ng-style="{'font-weight' : (item.BR === 1 ) ? 'bold' : '' }">{{item.SUMMA}}</td>
        </tr>

        <tr ng-repeat-end ng-show="item.BR === 1"  class="debet-zadol-space">
          <td class="debet-zadol-space"></td>
          <td class="debet-zadol-space"></td>
          <td class="debet-zadol-space"></td>
          <td class="debet-zadol-space"></td>
          <td class="debet-zadol-space"></td>
        </tr>
      </table>
    </div>

  </div>
</div>
<!-- /учёт - отчёты - Дебиторская задолженность -->

