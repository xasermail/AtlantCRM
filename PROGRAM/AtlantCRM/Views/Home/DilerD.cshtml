<!-- Дилер D - Информация-->
<div id="dilerD" class="tab-content" ng-controller="dilerDCtrl"
     ng-show="(global.selectedMenuItem === 'menuItemDilerD' && global.selectedDilerDSubMenuItem === 0)">

     <div class="diler-d-header">
       <h2>Успех предсказуем - его можно запланировать!</h2>
     </div>

     <div>
       <span>Год: </span>
       <input type="number" ng-model="year" ng-change="yearChangeHandler()" />

       <span>Месяц: </span>
       <select ng-options="item.id as item.name for item in months" ng-model="month" ng-change="monthChangeHandler()">
       </select>
     </div>

     <h3>Показатели деятельности салона</h3>

    <div class="block-1">

      <!-- Показатели деятельности -->
      <div class="pokaz-deyat">
        <table class="table table-bordered table-condensed table-striped">
          <thead>
            <tr>
              <th rowspan="2">Точка безубыт.</th>
              <th rowspan="2">Валовый доход</th>
              <th colspan="2">Количество продаж</th>
              <th colspan="6">Количество посетителей среднее по неделям</th>
            </tr>
            <tr>
              <th>Фактически</th>
              <th>Запланировано</th>
              @*<th>План</th>*@
              <th>1н/ср.%</th>
              <th>2н/ср.%</th>
              <th>3н/ср.%</th>
              <th>4н/ср.%</th>
              <th ng-show="rabota[9].swf5 != null">5н/ср.%</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td rowspan="3">{{deyat.tochkaBezub}}</td>
              <td rowspan="3">{{deyat.valovDohod}}</td>
              <td rowspan="3">{{deyat.kolPrFaktVsego}}</td>
              <td rowspan="3">{{deyat.kolPrZapl}}</td>
              <td>{{rabota[9].swf1}}</td>
              <td>{{rabota[9].swf2}}</td>
              <td>{{rabota[9].swf3}}</td>
              <td>{{rabota[9].swf4}}</td>
              <td ng-show="rabota[9].swf5 != null">{{rabota[9].swf5}}</td>
            </tr>
            <tr>
              <td>{{deyat.kolPrFakt1w}}</td>
              <td>{{deyat.kolPrFakt2w}}</td>
              <td>{{deyat.kolPrFakt3w}}</td>
              <td>{{deyat.kolPrFakt4w}}</td>
              <td ng-show="rabota[9].swf5 != null">{{deyat.kolPrFakt5w}}</td>
            </tr>
            <tr>
              <td>{{deyat.valovDohod1w}}</td>
              <td>{{deyat.valovDohod2w}}</td>
              <td>{{deyat.valovDohod3w}}</td>
              <td>{{deyat.valovDohod4w}}</td>
              <td ng-show="rabota[9].swf5 != null">{{deyat.valovDohod5w}}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <!-- /показатели деятельности -->
    </div>

  <div class="block-2">
    <h3>Работа салона</h3>

    <!-- Работа салона -->
    <div class="rabota-salona">
      <table class="table table-bordered table-condensed table-striped">
        <tr ng-repeat="row in rabota">
          <td ng-repeat="(key, value) in row">
            {{value}}
          </td>
        </tr>
      </table>
    </div>
    <!-- /работа салона -->

    <!-- Расходы -->
    @* вроде как не нужно
    <div class="rashodi">
      <table class="table table-bordered table-condensed table-striped">
        <thead>
          <tr>
            <th colspan="2">Расходы</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="item in rashodi">
            <td>{{item.NAME}}</td>
            <td>{{item.RASHOD}}</td>
          </tr>
        </tbody>
      </table>
    </div>
    *@
    <!-- Расходы -->

  </div>


  <!-- Продажи салона -->
  <div class="block-3">

    <h3>Продажи салона</h3>

    <table class="table table-bordered table-condensed table-striped">
      <tr ng-repeat="row in prodaji">
        <td ng-repeat="(key, value) in row">{{value}}</td>
      </tr>
    </table>

  </div>
  <!-- /продажи салона -->



</div>
<!-- /дилер D - Информация-->